<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignosPacienteActivity">


    <LinearLayout
        android:id="@+id/linearLayoutRegistrarSignos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewRegistrarSignos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Registre sus signos"
            android:textColor="@color/DarkBlue"
            android:textSize="24sp"
            android:textStyle="bold">
        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/OffGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewTemperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Temperatura"
                android:textColor="@color/Blue"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <ImageButton
                android:id="@+id/ojoTemperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:src="@drawable/closed_eye_icon">
            </ImageButton>

        </LinearLayout>

        <EditText
            android:id="@+id/registrarTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su temperatura en C°"
            android:layout_margin="5dp"
            android:background="@drawable/text_custom_background"
            android:text=""
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:textSize="16sp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/OffGray"/>

        <LinearLayout
            android:id="@+id/linearLayoutGlicemiaCapilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewGlicemiaCapilar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Glicemia capilar"
                android:textColor="@color/Blue"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <ImageButton
                android:id="@+id/ojoGlicemia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:src="@drawable/closed_eye_icon">
            </ImageButton>

        </LinearLayout>

        <EditText
            android:id="@+id/registrarGlicemia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su glicemia en mg/dL"
            android:layout_margin="5dp"
            android:background="@drawable/text_custom_background"
            android:text=""
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:textSize="16sp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/OffGray"/>

        <LinearLayout
            android:id="@+id/linearLayoutPresionArterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPresionArterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Presión arterial (PAS/PAD)"
                android:textColor="@color/Blue"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <ImageButton
                android:id="@+id/ojoPresionArterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:src="@drawable/closed_eye_icon">
            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRegistrarPresion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/registrarPresionSistolica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Presión Sistólica"
                android:layout_margin="5dp"
                android:background="@drawable/text_custom_background"
                android:text=""
                android:textColor="@color/black"
                android:inputType="numberDecimal"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/registrarPresionDiastolica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Presión Diastólica"
                android:layout_margin="5dp"
                android:background="@drawable/text_custom_background"
                android:text=""
                android:textColor="@color/black"
                android:inputType="numberDecimal"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/OffGray"/>

        <LinearLayout
            android:id="@+id/linearLayoutFrecuenciaCardiaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFrecuenciaCardiaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Frecuencia cardíaca"
                android:textColor="@color/Blue"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <ImageButton
                android:id="@+id/ojoFrecuenciaCardiaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:src="@drawable/closed_eye_icon">
            </ImageButton>

        </LinearLayout>

        <EditText
            android:id="@+id/registrarFrecuenciaCardiaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su frecuencia cardíaca en PPM"
            android:layout_margin="5dp"
            android:inputType="numberDecimal"
            android:background="@drawable/text_custom_background"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/OffGray"/>


        <LinearLayout
            android:id="@+id/linearLayoutSaturacionOxigeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSaturacionOxigeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Saturación de oxígeno"
                android:textColor="@color/Blue"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <ImageButton
                android:id="@+id/ojoSaturacionOxigeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:src="@drawable/closed_eye_icon">
            </ImageButton>

        </LinearLayout>

        <EditText
            android:id="@+id/registrarSaturacionOxigeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ingrese la saturación de oxígeno en %"
            android:layout_margin="5dp"
            android:background="@drawable/text_custom_background"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/OffGray"/>

        <Button
            android:id="@+id/registrarSignosBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar signos">
        </Button>



    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>